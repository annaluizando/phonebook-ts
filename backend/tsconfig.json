{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
          "*": ["*", "src/*"],
        },
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["node", "jest"],
      "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "server.ts"],
    "exclude": ["node_modules"]
}
  